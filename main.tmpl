<!DOCTYPE html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nykredit Fitness</title>
    <link rel="stylesheet" href="/css/app.css">
    <script src="/js/modernizr.js"></script>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.2/html5shiv.js"></script>
      <script src="//s3.amazonaws.com/nwapi/nwmatcher/nwmatcher-1.2.5-min.js"></script>
      <script src="//html5base.googlecode.com/svn-history/r38/trunk/js/selectivizr-1.0.3b.js"></script>
      <script src="//cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <div class="row page-wrap">
      <div class="large-12 columns">

        {{ template "topnav" . }}
        <div class="top-corner"></div>

        {{ with .alert }}
          {{ template "alert" . }}
        {{ end }}

        {{ if eq .page "login" }}
          {{ template "login" }}
        {{ else if eq .page "forgot" }}
          {{ template "forgot" }}
        {{ else if eq .page "signup" }}
          {{ template "signup" }}
        {{ else if eq .page "profile" }}
          {{ template "profile" . }}

        {{ else if eq .page "users" }}
          {{ template "users" . }}
        {{ else if eq .page "users_create" }}
          {{ template "users_create" . }}
        {{ else if eq .page "users_update" }}
          {{ template "users_update" . }}

        {{ else if eq .page "list" }}
          {{ template "list" . }}
        {{ else if eq .page "calendar" }}
          {{ template "calendar" . }}
        {{ else }}
          {{ template "welcome" . }}
        {{ end }}

      </div>
    </div>

    <div class="row">
      <div class="large-12 columns text-center footer">
        <a href="#">Nykredit Fitness</a>
      </div>
    </div>

    <script src="/js/jquery.min.js"></script>
    <script src="/js/foundation.min.js"></script>
    <script src="/js/app.js"></script>
    <script>$(document).foundation()</script>
  </body>
</html>
