{{define "topnav"}}
  <nav class="top-bar" data-topbar role="navigation">
    <ul class="title-area">
      <li class="name">
        <h1><a href="/"><img src="/img/logo.gif" /></a></h1>
      </li>
      <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
    </ul>
    <section class="top-bar-section">
      <ul class="right">
      {{ with .self }}
        <li><a href="/calendar">Calendar</a></li>
        <li><a href="/list">Classes</a></li>
        <li><a href="#">My assignments</a></li>
        {{if eq .Status 2}}
        <li class="has-dropdown">
          <a href="#">Administrator</a>
          <ul class="dropdown">
            <li><a href="#">Activity logs</a></li>
            <li><a href="/users">Users list</a></li>
          </ul>
        </li>
        {{end}}
        <li class="has-dropdown">
          <a href="#">{{.Name}}</a>
          <ul class="dropdown">
            <li><a href="/profile">Edit profile</a></li>
            <li><a href="/logout">Log out</a></li>
          </ul>
        </li>
      {{ else }}
        <li><a href="/signup">Sign up</a></li>
        <li><a href="/forgot">Forgot password</a></li>
        <li><a href="/login">Log in</a></li>
      {{ end }}
      </ul>
    </section>
  </nav>
{{end}}
{{define "alert"}}
  <div class="row">
    <div class="large-6 medium-8 columns">
      <div data-alert class="alert-box radius {{.Kind}}">
        {{.Message}}
        <a href="#" class="close">&times;</a>
      </div>
    </div>
  </div>
{{end}}
{{define "login"}}
  <div class="row">
    <div class="large-6 medium-8 columns">
      <h4>Sign in</h4>

      <p class="form-description">
        Welcome to Nykredit Fitness Tilmeldingssystem. Here members of Nykredit Fitness can sign up for fitness classes at Glaskuben.
        If you are a new user, then you can create yourself in the system by clicking 'Create user'.
        If you already have a user, then you can log in with your username and password.
      </p>
      <div class="panel">
        <form action="/login" method="POST">
          <div class="row">
            <div class="small-4 columns">
              <label for="email">Email</label>
            </div>
            <div class="small-8 columns">
              <input id="email" name="email" type="text" placeholder="" />
            </div>
          </div>
          <div class="row">
            <div class="small-4 columns">
              <label for="password">Password</label>
            </div>
            <div class="small-8 columns">
              <input id="password" name="password" type="password" placeholder="" />
            </div>
          </div>
          <div class="row end">
            <div class="small-4 columns">
              <input type="submit" class="button tiny radius" value="Sign in" />
            </div>
            <div class="small-8 columns">
              <a href="/forgot"><small>Forgot password</small></a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
{{end}}
{{define "forgot"}}
  <div class="row">
    <div class="large-6 medium-8 columns">
      <h4>Forgot password</h4>

      <p class="form-description">
        Please enter your email and the system will send you login instructions.
      </p>
      <div class="panel">
        <form action="/forgot" method="POST">
          <div class="row">
            <div class="small-4 columns">
              <label for="email">Email</label>
            </div>
            <div class="small-8 columns">
              <input id="email" name="email" type="text" placeholder="" />
            </div>
            <div class="small-12 columns description">
              The email you used when you created the user.
            </div>
          </div>
          <div class="row end">
            <div class="columns">
              <input type="submit" class="button tiny radius" value="Send email" />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
{{end}}
{{define "signup"}}
  <div class="row">
    <div class="large-6 medium-8 columns">
      <h4>Create new user</h4>

      <div class="panel">
        <form action="/signup" method="POST">
          <div class="row">
            <div class="small-4 columns">
              <label for="name">Name</label>
            </div>
            <div class="small-8 columns">
              <input id="name" name="name" type="text" placeholder="Anders Andersen" />
            </div>
            <div class="small-12 columns description">
              "Your real name which will be used to represent you various placed on the site, lists, emails etc.
            </div>
          </div>
          <div class="row">
            <div class="small-4 columns">
              <label for="email">Email</label>
            </div>
            <div class="small-8 columns">
              <input id="email" name="email" type="text" placeholder="my@email.com" />
            </div>
            <div class="small-12 columns description">
              Your email which will be used to contact you regarding classes and more.
            </div>
          </div>
          <div class="row">
            <div class="small-4 columns">
              <label for="mobile">Mobile phone</label>
            </div>
            <div class="small-8 columns">
              <input id="mobile" name="mobile" type="text" placeholder="+45 11223344" />
            </div>
            <div class="small-12 columns description">
              Your mobile phone number which will be used to contact you and notify you about various classes and more.
            </div>
          </div>
          <div class="row">
            <div class="small-4 columns">
              <label for="password">Password</label>
            </div>
            <div class="small-8 columns">
              <input type="password" style="display:none" />
              <input id="password" name="password" type="password" placeholder="WT36yUX8STxP" />
            </div>
            <div class="small-12 columns description">
              The password which you will use to log in to system.
            </div>
          </div>
          <div class="row end">
            <div class="columns">
              <input type="submit" class="button tiny radius" value="Create" />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
{{end}}
{{define "profile_form"}}
  <div class="row">
    <div class="small-4 columns">
      <label for="name">Name</label>
    </div>
    <div class="small-8 columns">
      <input id="name" name="name" type="text" value="{{.form.Name}}" placeholder="Anders Andersen" />
    </div>
    <div class="small-12 columns description">
      The real name of the user.
    </div>
  </div>
  <div class="row">
    <div class="small-4 columns">
      <label for="email">Email</label>
    </div>
    <div class="small-8 columns">
      <input id="email" name="email" type="text" value="{{.form.Email}}" placeholder="min@e-mail.dk" />
    </div>
    <div class="small-12 columns description">
      The email of the user which will be used for sending email and to log in.
    </div>
  </div>
  <div class="row">
    <div class="small-4 columns">
      <label for="password">Password</label>
    </div>
    <div class="small-8 columns">
      <input type="password" style="display:none" />
      <input id="password" name="password" type="password" placeholder="" />
    </div>
    <div class="small-12 columns description">
      The password which the user will have to use to identify himself/herself.
    </div>
  </div>
  <div class="row">
    <div class="small-4 columns">
      <label for="mobile">Mobile phone</label>
    </div>
    <div class="small-8 columns">
      <input id="mobile" name="mobile" type="text" value="{{.form.Mobile}}" placeholder="+45 11223344" />
    </div>
    <div class="small-12 columns description">
      The mobile phonenumber of the user which will be used to send reminders and more.
    </div>
  </div>
  <div class="row">
    <div class="small-4 columns">
      <label for="language">Language</label>
    </div>
    <div class="small-8 columns">
      <select id="language" name="language">
        <option value="da" {{if eq .form.Language "da"}}selected{{end}}>Dansk</option>
        <option value="en" {{if eq .form.Language "en"}}selected{{end}}>English</option>
      </select>
    </div>
    <div class="small-12 columns description">
      The language you would prefer to view the site in.
    </div>
  </div>
  {{if and (eq .self.Status 2) (ne .page "profile")}}
  <div class="row">
    <div class="small-4 columns">
      <label for="status">Status</label>
    </div>
    <div class="small-8 columns">
      <select id="status" name="status">
        <option value="-2" {{if eq .form.Status -2}}selected{{end}}>Deactivated</option>
        <option value="-1" {{if eq .form.Status -1}}selected{{end}}>Waiting</option>
        <option value="0" {{if eq .form.Status 0}}selected{{end}}>User</option>
        <option value="1" {{if eq .form.Status 1}}selected{{end}}>Instructor</option>
        <option value="2" {{if eq .form.Status 2}}selected{{end}}>Administrator</option>
      </select>
    </div>
    <div class="small-12 columns description">
      The type of the user controls which things in the system the user has access to.
    </div>
  </div>
  {{end}}
{{end}}
{{define "profile"}}
  <div class="row">
    <div class="large-6 medium-8 columns">
      <h4>Edit own profile</h4>

      <div class="panel">
        <form action="/profile" method="POST">
          {{template "profile_form" . }}
          <div class="row end">
            <div class="columns">
              <input type="submit" class="button tiny radius" value="Save" />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
{{end}}
{{define "users_update"}}
  <div class="row">
    <div class="large-6 medium-8 columns">
      <h4>Edit user profile</h4>

      <div class="panel">
        <form action="/users/update/{{.user}}" method="POST">
          {{template "profile_form" . }}
          <div class="row end">
            <div class="columns">
              <input type="submit" class="button tiny radius" value="Save" />
              {{if ne .user .self.Id}}
                <input type="button" class="button tiny radius delete" value="Delete" data-action="/users/delete/{{.user}}" data-confirm="Are you sure?" />
              {{end}}
              <a href="/users" class="right">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
{{end}}
{{define "users_create"}}
  <div class="row">
    <div class="large-6 medium-8 columns">
      <h4>Create new user</h4>

      <div class="panel">
        <form action="/users/create" method="POST">
          {{template "profile_form" . }}
          <div class="row end">
            <div class="columns">
              <input type="submit" class="button tiny radius" value="Create" />
              <a href="/users" class="right">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
{{end}}
{{define "welcome"}}
  <div class="row">
    <div class="columns">
      <h4>Welcome {{.self.Name}}!</h4>
    </div>
  </div>
  <div class="row">
    <div class="columns">
      <p>You have logged-in to nk-fitness.dk</p>
    </div>
  </div>
{{end}}
{{define "users"}}
  <div class="row">
    <div class="large-8 columns">
      <h4>Users</h4>

      <p>
        <a href="/users">Active</a> |
        <a href="/users?status=-1">Waiting</a> |
        <a href="/users?status=-2">Inactive</a>
      </p>

      <table class="list">
        <thead>
          <tr>
            <td>Name</td>
            <td>Email</td>
            <td>Status</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          {{ $selfId := .self.Id }}
          {{range .list}}
          <tr>
            <td>
              <a href="/users/{{.Id}}/show">{{.Name}}</a>
            </td>
            <td>
              {{.Email}}
            </td>
            <td>
              {{if eq .Status -2}}Deactivated  {{end}}
              {{if eq .Status -1}}Waiting      {{end}}
              {{if eq .Status  0}}User         {{end}}
              {{if eq .Status  1}}Instructor   {{end}}
              {{if eq .Status  2}}Administrator{{end}}
            </td>
            <td>
              {{if ne .Id $selfId }}
              <a href="/users/update/{{.Id}}">Edit</a>
              {{end}}
            </td>
          </tr>
          {{end}}
        </tbody>
      </table>

      <p>
        <a href="/users/create" class="button tiny radius">Create user</a>
      </p>
    </div>
  </div>
{{end}}
