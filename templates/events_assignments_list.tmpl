  <div class="row">
    <div class="columns">

      {{$event_id := .id}}
      {{$actions := and .self.IsAdmin (eq .form.Status 0)}}

      <form method="POST">
        <table class="list">
          <thead>
            <tr>
              <td>{{"User"|T}}</td>
              <td>{{"Status"|T}}</td>
              {{if $actions}}
              <td>{{"Actions"|T}}</td>
              {{end}}
            </tr>
          </thead>
          <tbody>
            {{range .list}}
            <tr>
              <td>
                <a href="/users/view/{{.UserId}}">{{.UserName}}</a>
              </td>
              <td>
                {{statusTitle "assignment" .Status|T}}
              </td>
              {{if $actions}}
              <td>
                <a href="/assignments/delete/{{$event_id}}?user_id={{.UserId}}" data-action>{{"Cancel"|T}}</a>
                {{if ne .Status 1}}
                <a href="/assignments/confirm/{{$event_id}}?user_id={{.UserId}}" data-action>{{"Confirm"|T}}</a>
                {{end}}
              </td>
              {{end}}
            </tr>
            {{end}}
          </tbody>
        </table>
      </form>

    </div>
  </div>
