  <div class="row">
    <div class="large-6 medium-8 columns">
      <h4>{{.team.Name}}: {{"Events"|T}}</h4>

      <div class="panel">
        <form action="/teams/events/{{.id}}" method="POST">

          <div class="row">
            <div class="small-4 columns">
              <label for="date_from">{{"Date from"|T}}</label>
            </div>
            <div class="small-8 columns">
              <input id="date_from" name="date_from" type="text" value="{{.form.DateFrom}}" placeholder="01/12 2015" />
            </div>
            <div class="small-12 columns description">
              ...
            </div>
          </div>
          <div class="row">
            <div class="small-4 columns">
              <label for="date_till">{{"Date till"|T}}</label>
            </div>
            <div class="small-8 columns">
              <input id="date_till" name="date_till" type="text" value="{{.form.DateTill}}" placeholder="31/12 2015" />
            </div>
            <div class="small-12 columns description">
              ...
            </div>
          </div>
          <div class="row">
            <div class="small-4 columns">
              <label for="weekdays">{{"Weekday"|T}}</label>
            </div>
            <div class="small-8 columns">
              <select id="weekdays" name="weekdays" multiple="multiple" class="select2">
                <option value="0">{{"Monday"|T}}</option>
                <option value="1">{{"Tuesday"|T}}</option>
                <option value="2">{{"Wednesday"|T}}</option>
                <option value="3">{{"Thursday"|T}}</option>
                <option value="4">{{"Friday"|T}}</option>
                <option value="5">{{"Saturday"|T}}</option>
                <option value="6">{{"Sunday"|T}}</option>
              </select>
            </div>
            <div class="small-12 columns description">
              ...
            </div>
          </div>
          <div class="row">
            <div class="small-4 columns">
              <label for="start_at">{{"Start time"|T}}</label>
            </div>
            <div class="small-2 columns">
              <input id="start_at" name="start_at" type="text" value="{{.form.StartAt}}" size="5" placeholder="10:30" />
            </div>
            <div class="small-12 columns description">
              ...
            </div>
          </div>
          <div class="row">
            <div class="small-4 columns">
              <label for="minutes">{{"Duration"|T}}</label>
            </div>
            <div class="small-2 columns">
              <input id="minutes" name="minutes" type="text" value="{{.form.Minutes}}" size="2" placeholder="30" />
            </div>
            <div class="small-6 columns">
              min
            </div>
            <div class="small-12 columns description">
              ...
            </div>
          </div>

          <div class="row end">
            <div class="columns">
              <input type="submit" class="button tiny radius" value="{{"Add events"|T}}" />
              <input type="button" class="button tiny radius delete" value="{{"Remove events"|T}}" data-action="/teams/events/{{.id}}" data-confirm="{{"Are you sure?"|T}}" />
              <a href="/teams/update/{{.id}}" class="info button tiny radius right">{{"Cancel"|T}}</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
